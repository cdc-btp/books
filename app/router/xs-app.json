{
 "routes": [
  {
   "source": "^/app/(.*)$",
   "target": "$1",
   "localDir": ".",
   "cacheControl": "no-cache, no-store, must-revalidate"
  },
  {
   "source": "^/appconfig/",
   "localDir": ".",
   "cacheControl": "no-cache, no-store, must-revalidate"
  },{
   "source": "^/user-api(.*)",
   "target": "$1",
   "service": "sap-approuter-userapi"
  }, 
  {
   "source": "^/user/me$",
   "target": "/currentUser",
   "service": "sap-approuter-userapi"
  }, 
  {
   "source": "^/api/(.*)$",
   "target": "/odata/v4/$1",
   "destination": "srv-api",
   "authenticationType": "ias",
   "csrfProtection": false
  },
  {
   "source": "^(.*)$",
   "target": "/vue/$1",
   "localDir": ".",
   "cacheControl": "no-cache, no-store, must-revalidate"
  }
 ]
}
